<!-- res/drawable/custom_progress_bar.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- màu nền cho thanh progress -->
            <size android:height="5dp"/> <!-- độ dày của thanh nền, chỉnh về 5dp hoặc 6dp -->
            <corners android:radius="5dp"/> <!-- bo tròn các góc nền -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FF4081"/> <!-- màu của progress -->
                <size android:height="5dp"/> <!-- độ dày của progress, chỉnh về 5dp hoặc 6dp -->
                <corners android:radius="5dp"/> <!-- bo tròn các góc progress -->
            </shape>
        </clip>
    </item>
</layer-list>
