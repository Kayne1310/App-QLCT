<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".CreateFragment">

    <!-- Nhập số tiền -->

    <TextView
        android:id="@+id/label_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/amount"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:autofillHints="paymentAmount"
        android:hint="@string/enter_amount"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Nhập tên khoản chi -->
    <TextView
        android:id="@+id/label_expense_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/expense_name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_expense_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="expenseCategory"
        android:hint="@string/enter_the_expense_name"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Chọn loại chi tiêu -->
    <TextView
        android:id="@+id/label_expense_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense_type"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/sp_expense_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Comment -->
    <TextView
        android:id="@+id/label_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comments"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:autofillHints="comment"
        android:hint="@string/enter_comments"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:minLines="3"
        android:maxLines="5"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <!-- Nút thêm chi tiêu -->
    <Button
        android:id="@+id/btn_add_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Save"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        android:padding="12dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btntest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
